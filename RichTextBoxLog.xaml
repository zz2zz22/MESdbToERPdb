<UserControl x:Class="MESdbToERPdb.RichTextBoxLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MESdbToERPdb"
             mc:Ignorable="d" 
             d:DesignHeight="390" d:DesignWidth="800">
    <Grid>
        <RichTextBox x:Name="rtb_log" Margin="0,0,0,0" Background="Black">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Log" Foreground="White"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</UserControl>
